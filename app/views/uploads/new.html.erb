<h1>New upload</h1>

<%= form_with(model: @upload) do |form| %>
  <% if @upload.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@upload.errors.count, "error") %> prohibited this upload from being saved:</h2>

      <ul>
        <% @upload.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :file, style: "display: block" %>
    <%= form.file_field :file, direct_upload: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to uploads", uploads_path %>
</div>
